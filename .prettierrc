{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-svelte"],
  "quoteProps": "as-needed",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "trailingComma": "all",
  "singleQuote": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "useTabs": false,
  "semi": false,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ]
}
